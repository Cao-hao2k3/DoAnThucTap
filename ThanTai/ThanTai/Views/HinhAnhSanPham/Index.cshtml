@model IEnumerable<ThanTai.Models.HinhAnhSanPham>

@{
    ViewData["Title"] = "Danh sách hình ảnh sản phẩm";
}

<div class="card">
    <h5 class="card-header">@ViewData["Title"]</h5>
    <div class="card-body">
        <p>
            <a asp-action="Create" class="btn btn-success">
                <i class="fa-light fa-plus"></i> Thêm mới
            </a>
        </p>
        <table class="table table-sm table-hover table-striped table-bordered mb-0">
            <thead>
                <tr>
                    <th>Ảnh sản phẩm</th>
                    <th>Ảnh thông số</th>
                    <th>Sản phẩm</th>
                    <th width="5%">Sửa</th>
                    <th width="5%">Xóa</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.AnhSanPham)</td>
                        <td>@Html.DisplayFor(modelItem => item.AnhThongSo)</td>
                        <td>@Html.DisplayFor(modelItem => item.SanPham.TenSanPham)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.ID">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a asp-action="Delete" asp-route-id="@item.ID">
                                <i class="fa-solid fa-trash-can text-danger"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
